<body class=body>
<% if current_user.try(:admin?) %>
  <h1>Appointment_admin</h1>
<% else %>
  <h1>Appointments</h1>
<% end %> 

<table class="content">
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% if user_signed_in? %>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.description %></td>
        <td><button type="button" class="btn btn-primary"><%= link_to 'Show', appointment %></button></td>
		<% if current_user.admin %>
          <td><button type="button" class="btn btn-warning"><%= link_to 'Edit', edit_appointment_path(appointment) %></button></td>
          <td><button type="button" class="btn btn-danger"><%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
		<% end %> 
      </tr>
    <% end %>
  <% end %>
  </tbody>
</table>

<br>
<% if current_user.admin %>
  <%= link_to 'New Event', new_appointment_path, class:'btn btn-success' %>
  <%= link_to 'New StudentGroup', new_student_group_path, class:'btn btn-success' %>
<% end %>
</body>
